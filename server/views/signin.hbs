<div class="row g-3">
  <h1>Sign in</h1>

  <div class="col-6 align-self-center mb-6">
    <form action="/auth/login" method="post">

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control form-control-lg" id="email" name="email" placeholder="Type your e-mail"/>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Create password"/>
      </div>

      <button type="submit" class="btn btn-primary btn-lg col-12 mt-4">Sign in</button>
    
    </form>
  </div>
</div>
